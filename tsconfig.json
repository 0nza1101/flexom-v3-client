{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["vite/client", "vitest/globals"],
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "allowJs": true,
        "resolveJsonModule": true
    }
}
